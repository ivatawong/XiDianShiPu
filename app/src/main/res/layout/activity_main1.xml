<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentBottom="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    tools:context="com.example.administrator.xidianshipu.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="8dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="8dp">

            <ImageView
                android:id="@+id/zhuguli"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/zhuguli" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/zhuguli"
                android:layout_gravity="bottom"
                android:text="原料：\n\t\t\t\t\t\t班戟皮1张、雪糕30克、淡忌廉少许、朱古力酱适量、薄荷叶少许、鲜水果适量、朱古力棒2根、白巧克力粉少量。\n朱古力冰班戟的制作方法：\n\t\t\t\t\t\t1.用班戟皮将雪糕球包起成四方状；\n\t\t\t\t\t\t2.碟底用朱古力酱画上朱古力网，再挤上淡忌廉，然后将包好的班戟摆上；\n\t\t\t\t\t\t3.伴上鲜水果、朱古力棒，撒上白朱古力粉，再用薄荷叶、鲜水果装饰即可。"
                android:textSize="20sp" />
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
